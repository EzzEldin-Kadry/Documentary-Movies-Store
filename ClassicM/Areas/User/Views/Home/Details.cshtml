@model ShoppingCart

<br />
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card container">
        <div class="card-header text-light mx-lg-0 row">
            <div class="col-12 col-md-6">
                <h3 class="text-white">@Model.Product.Title</h3>
                <p class="text-warning">by @Model.Product.Director</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-warning pt-2" style="height:30px">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row">
                            <h6 class="text-muted">Company: @Model.Product.Company</h6>
                        </div>
                        <div class="row pl-2">
                            <h6 class="text-muted pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h6>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>Quantity</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>1-5</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>6-10</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>10+</div> </div>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>Price</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>@Model.Product.Price.ToString("c")</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>@Model.Product.Price5.ToString("c")</div> </div>
                            <div class="p-1 col-2 bg-secondary border-bottom"> <div>@Model.Product.Price10.ToString("c")</div> </div>
                        </div>
                    </div>
                    @*<div class="row pl-2">
                        <div class="col-12 col-lg-3 pt-2">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" /> 
                            <hr />
                        </div>
                        <div class="row offset-lg-1 col-lg-8">
                            <p class="col-2 text-secondary">@Html.Raw(Model.Product.Description)</p>
                        </div>
                    </div>*@
                    <div class="row pl-2">
                        <p class="col-2 text-secondary">@Html.Raw(Model.Product.Description)</p>
                        <div class="col-12 col-lg-3">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" /> 
                            <hr />
                        </div>
                    </div>
                    <div class="row pl-2">
                        <div class="col-2 text-primary"> <h5>Count</h5> </div>
                        <div class="col-4"> <input asp-for="@Model.Count" class="form-control"/> </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control" style="height:50x;" asp-action="Index">Back to List</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50x;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>