@model int
<div class="container row pt-3">
    <div class="col-12 text-center">
        <h3 class="text-primary text-center">Payment Done Successfully!</h3>
        Your Order Number is : @Model <br /> <br />
        <img src="~/img/right_mark.png" width="25%"/>
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Payment has been applied successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary">
            Back to Order Details
        </a>
    </div>
</div> 
